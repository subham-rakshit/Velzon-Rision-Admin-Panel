{
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Default formatter for all files
  "editor.formatOnSave": true, // Format files automatically on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always", // Fix ESLint issues automatically on save
    "source.addMissingImports": "always" // Add missing imports automatically on save
  },
  "prettier.tabWidth": 2, // Use 2 spaces for indentation
  "prettier.useTabs": false, // Use spaces instead of tabs
  "prettier.semi": true, // Add semicolons at the end of statements
  "prettier.singleQuote": false, // Use double quotes
  "prettier.jsxSingleQuote": false, // Use double quotes in JSX
  "prettier.trailingComma": "es5", // Add trailing commas where valid in ES5 (e.g., objects, arrays)
  "prettier.arrowParens": "always", // Always include parentheses around arrow function parameters
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier for JSON files
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier for JavaScript files
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Prettier for React (JSX) files
  }
}
